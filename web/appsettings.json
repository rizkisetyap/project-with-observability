{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=./web.db"
  },
  "AllowedHosts": "*",
  "AspNetCoreInstrumentation": {
    "RecordException": "true"
  },
  "OpenTelemetryOptions": {
    "ResourceAttributes": {
      "IncludedFormated": true,
      "IncludeScopes": true,
      "ParseStateValues": true,
      "ServiceName": "backend",
      "ServiceVersion": "1.0.0",
      "NameSpace": "api",
      "ServiceInstanceId": "backend-01"
    },
    "Exporters": {
      "Traces": "otlp",
      "Metrics": "prometheus",
      "Logs": "none"
    },
    "Otlp": {
      "Endpoint": "http://localhost:4317"
    }
  }
}
